<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= f.label :email, class: "form-label" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password, class: "form-label" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
                  </div>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Log in", class: "btn btn-dark btn-lg btn-block" %>
                  </div>

                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'small text-muted' %>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?
                    <%= link_to "Register here", new_registration_path(resource_name), style: "color: #393f81;" %>
                  </p>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>